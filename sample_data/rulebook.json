      "risk": {
        "type": "Legal",
        "severity": "High",
        "likelihood": "Medium"
      },
      "keywords": [
        "GDPR",
        "personal data",
        "lawful",
        "consent"
      ],
      "regex": [
        "(?i)GDPR"
      ]
    },
    {
      "id": "C2",
      "category": "Compliance",
      "description": "Protected health information must follow HIPAA privacy and security guidelines.",
      "source": "HIPAA \u00a7164.302",
      "risk": {
        "type": "Legal",
        "severity": "High",
        "likelihood": "High"
      },
      "keywords": [
        "HIPAA",
        "PHI",
        "health information"
      ],
      "regex": [
        "(?i)HIPAA|PHI"
      ]
    },
    {
      "id": "R1",
      "category": "Risk",
      "description": "All sensitive data must be encrypted at rest and in transit using AES-256 or higher.",
      "source": "ISO 27001 / NIST CSF",
      "risk": {
        "type": "Cybersecurity",
        "severity": "High",
        "likelihood": "High"
      },
      "keywords": [
        "encrypted",
        "AES-256",
        "TLS",
        "encryption"
      ],
      "regex": [
        "(?i)AES\\s*-?256",
        "(?i)TLS\\s*1\\.(2|3)"
      ]
    },
    {
      "id": "R2",
      "category": "Risk",
      "description": "Third-party vendors must sign confidentiality and data processing agreements.",
      "source": "Internal Policy",
      "risk": {
        "type": "Operational",
        "severity": "Medium",
        "likelihood": "High"
      },
      "keywords": [
        "third-party",
        "vendor",
        "DPA",
        "confidentiality"
      ],
      "regex": [
        "(?i)(third[- ]?party|vendor).*(agreement|DPA)"
      ]
    }
  ]
